<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/money_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/money_amount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/money_color_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <TextView
                    android:id="@+id/money_date_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"/>

                <RelativeLayout
                    android:id="@+id/money_operation_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/money_edit_image_button"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/curl_light_button"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>

                    <ImageButton
                        android:id="@+id/money_delete_image_button"
                        android:src="@drawable/ic_delete"
                        android:background="@drawable/curl_dark_button"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>

                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color"/>
    </LinearLayout>

</LinearLayout>